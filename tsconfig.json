{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"strict": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"composite": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/pages/*": [
				"./pages/*"
			],
			"@/components/*": [
				"./components/*"
			],
			"@/types/*": [
				"./types/*"
			],
			"@/layouts/*": [
				"./components/layouts/*"
			],
			"@/public/*": [
				"../public/*"
			],
			"@/styles/*": [
				"./styles/*"
			],
			"@/libs/*": [
				"./libs/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	]
}
